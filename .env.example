# Environment Variables Template
# Copy this file to .env.local for development and .env.production for production
# DO NOT commit .env.local or .env.production to git!

# MongoDB
MONGODB_URI="your-mongodb-connection-string"

# JWT
JWT_SECRET="your-jwt-secret-key"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"  # Change to https://youdex.in for production
NEXTAUTH_SECRET="your-nextauth-secret"  # Generate with: openssl rand -base64 32 or PowerShell random

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Hugging Face API
HUGGINGFACE_API_KEY="your-huggingface-api-key"

# Vercel (auto-populated)
VERCEL_OIDC_TOKEN=""
